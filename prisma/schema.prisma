// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"

}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  password  String
  bookmarks Movie[]
}

model Movie {
  id           Int     @id @default(autoincrement())
  title        String
  year         Int
  category     String
  rating       String
  isBookmarked Boolean
  isTrending   Boolean
  trending_sm  String?
  trending_lg  String?
  regular_sm   String
  regular_md   String
  regular_lg   String
  users        User[]
}
